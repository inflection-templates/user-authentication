{
  "Urls": "http://0.0.0.0:5000",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "bin/logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  },
  "AllowedHosts": "*",
  "FrontendUrl": "http://0.0.0.0:5000",
  "Database": {
    "Type": "Relational",
    "Flavor": "MySQL",
    "ConnectionString": "server=localhost;port=3306;database=shala;user=root;password:Adipri@23",
    "ORM": "EntityFrameworkCore",
    "Host": "localhost",
    "Port": 3306,
    "User": "root",
    "Password": "Adipri@23",
    "Name": "shala_local"
  },
  "LoginSession": {
    "SessionTimeoutInDays": 30
  },
  "Secrets": {
    "Jwt": {
      "UserAccessTokenSecret": "<your-128-bit-long-user-access-token-secret>",
      "UserRefreshTokenSecret": "<your-128-bit-long-user-refresh-token-secret>",
      "Issuer": "shala",
      "Audience": "shala",
      "AccessTokenValidityInDays": 5,
      "RefreshTokenValidityInDays": 365
    },
    "Password": {
      "CipherSalt": "shala",
      "ResetTokenSecret": "shala"
    },
    "ApiKey": {
      "EncryptionKey": "shala",
      "ClientAppPasswordSecret": "shala"
    }
  },
  "Telemetry": {
    "Enabled": true,
    "Tracing": {
      "Enabled": true,
      "Zipkin": {
        "Endpoint": "http://localhost:9411/api/v2/spans"
      }
    },
    "Metrics": {
      "Enabled": true
    }
  },
  "EventMessaging": {
    "Enabled": true,
    "Publisher": true,
    "Consumer": true,
    "Provider": "InMemory",
    "RabbitMQ": {
      "Host": "rabbitmq://localhost/",
      "Port": 5672
    },
    "AmazonSQS": {
      "AccessKey": "<your access key>",
      "SecretKey": "<your secret key>",
      "Region": "us-east-1",
      "QueueUrl": "https://sqs.us-east-1.amazonaws.com/123456789012/MyQueue"
    },
    "AzureServiceBus": {
      "ConnectionString": "Endpoint=sb://<your-servicebus-namespace>.servicebus.windows.net/;SharedAccessKeyName=<your-policy>;SharedAccessKey=<your-key>"
    },
    "InMemory": {
      "QueueSize": 100
    }
  },
  "Email": {
    "From": "support@inflectionzone.com",
    "SendGrid": {
      "ApiKey": "<sendgrid-api-key>"
    },
    "SMTP": {
      "Host": "smtp-relay.brevo.com",
      "Port": 587,
      "Username": "<email>",
      "Password": "<smtp-password>"
    },
    "Brevo": {
      "ApiKey": "<brevo-api-key>"
    }
  },
  "SMS": {
    "Twilio": {
      "AccountSid": "<twilio-account-sid>",
      "AuthToken": "<twilio-auth-token>",
      "FromPhoneNumber": "<twilio-phone-number>"
    }
  },
  "FileStorage": {
    "Local": {
      "StoragePath": "storage",
      "BaseStorageKeyPath": "uploads"
    },
    "AmazonS3": {
      "AccessKey": "<your-access-key>",
      "SecretKey": "<your-secret-key>",
      "Region": "us-east-1",
      "BucketName": "shala",
      "BaseStorageKeyPath": "uploads"
    },
    "AzureBlobStorage": {
      "ConnectionString": "<connection-string>",
      "ContainerName": "<container-name>",
      "BaseStorageKeyPath": "uploads"
    },
    "GoogleCloudStorage": {
      "ProjectId": "<your-project-id>",
      "BucketName": "<your-bucket-name>",
      "JsonKeyFilePath": "<path-to-your-json-key-file>",
      "BaseStorageKeyPath": "uploads"
    }
  },
  "OAuth": {
    "Google": {
      "Enabled": true,
      "ClientId": "<client-id>",
      "ClientSecret": "<client-secret>"
    },
    "Twitter": {
      "Enabled": true,
      "ConsumerAPIKey": "<client-id>",
      "ConsumerSecret": "<client-secret>"
    },
    "Facebook": {
      "Enabled": true,
      "AppId": "<client-id>",
      "AppSecret": "<client-secret>"
    },
    "Microsoft": {
      "Enabled": true,
      "ClientId": "<client-id>",
      "ClientSecret": "<client-secret>"
    },
    "GitHub": {
      "Enabled": true,
      "ClientId": "<client-id>",
      "ClientSecret": "<client-secret>"
    },
    "LinkedIn": {
      "Enabled": true,
      "ClientId": "<client-id>",
      "ClientSecret": "<client-secret>"
    },
    "GitLab": {
      "Enabled": true,
      "ClientId": "<client-id>",
      "ClientSecret": "<client-secret>"
    }
  },
  "Cache": {
    "Enabled": true,
    "ExpirationMinutes": 60,
    "Provider": "Memory",
    "Redis": {
      "ConnectionString": "<connection-string>"
    },
    "Memory": {
      "CacheSize": 1000
    }
  }
}
