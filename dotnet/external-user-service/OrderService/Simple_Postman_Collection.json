{
  "info": {
    "name": "Order Management Service API",
    "description": "Simple collection for testing Order Service with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"your-password\"\n}"
            },
            "url": {
              "raw": "{{user_service_url}}/api/users/auth/login-with-password",
              "host": ["{{user_service_url}}"],
              "path": ["api", "users", "auth", "login-with-password"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('jwt_token', response.token);",
                  "    console.log('JWT Token saved');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{order_service_url}}/health",
              "host": ["{{order_service_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{order_service_url}}/api/customers",
              "host": ["{{order_service_url}}"],
              "path": ["api", "customers"]
            }
          }
        },
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Johnson\",\n  \"email\": \"alice.johnson@example.com\",\n  \"phone\": \"+1234567892\",\n  \"address\": \"789 Pine St, City, State 12347\"\n}"
            },
            "url": {
              "raw": "{{order_service_url}}/api/customers",
              "host": ["{{order_service_url}}"],
              "path": ["api", "customers"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{order_service_url}}/api/products",
              "host": ["{{order_service_url}}"],
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Gaming Keyboard\",\n  \"description\": \"Mechanical gaming keyboard with RGB lighting\",\n  \"price\": 89.99,\n  \"sku\": \"KEYBOARD-001\",\n  \"stockQuantity\": 100,\n  \"category\": \"Electronics\"\n}"
            },
            "url": {
              "raw": "{{order_service_url}}/api/products",
              "host": ["{{order_service_url}}"],
              "path": ["api", "products"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{order_service_url}}/api/orders",
              "host": ["{{order_service_url}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": 1,\n  \"notes\": \"Please handle with care\",\n  \"shippingAddress\": \"123 Main St, City, State 12345\",\n  \"orderItems\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 1\n    },\n    {\n      \"productId\": 2,\n      \"quantity\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{order_service_url}}/api/orders",
              "host": ["{{order_service_url}}"],
              "path": ["api", "orders"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "user_service_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "order_service_url",
      "value": "https://localhost:7000"
    },
    {
      "key": "jwt_token",
      "value": ""
    }
  ]
}
